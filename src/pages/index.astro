		<footer class="footer">
			<div class="container">
				<p class="footer-brand">IBRAH</p>
				<p class="footer-tagline">Stories with lessons.</p>
				<p class="footer-copyright">¬© 2024 IBRAH. All rights reserved.</p>
			</div>
		</footer>
	</main>
</Layout>

<style>
	:root {
		--color-bg: #0a0a0a;
		--color-bg-secondary: #1a1a1a;
		--color-text: #ffffff;
		--color-text-muted: #a0a0a0;
		--color-accent: #d4af37;
		--color-accent-hover: #f0c955;
		--spacing-xs: 1rem;
		--spacing-sm: 2rem;
		--spacing-md: 4rem;
		--spacing-lg: 6rem;
		--spacing-xl: 8rem;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	main {
		background: var(--color-bg);
		color: var(--color-text);
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
		line-height: 1.6;
		scroll-behavior: smooth;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	section {
		padding: var(--spacing-xl) 0;
		min-height: 100vh;
		display: flex;
		align-items: center;
	}

	.hero {
		text-align: center;
		position: relative;
		background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
	}

	.brand-name {
		font-size: clamp(4rem, 12vw, 8rem);
		font-weight: 700;
		letter-spacing: 0.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--color-text) 0%, var(--color-accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.tagline {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
		color: var(--color-accent);
		margin-bottom: 2rem;
		font-weight: 300;
		letter-spacing: 0.1rem;
	}

	.intro {
		font-size: clamp(1rem, 2vw, 1.125rem);
		color: var(--color-text-muted);
		max-width: 700px;
		margin: 0 auto 3rem;
		line-height: 1.8;
	}

	.cta-buttons {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem 2rem;
		font-size: 1rem;
		font-weight: 500;
		text-decoration: none;
		border-radius: 8px;
		transition: all 0.3s ease;
		border: 2px solid;
	}

	.btn-primary {
		background: var(--color-accent);
		color: var(--color-bg);
		border-color: var(--color-accent);
	}

	.btn-primary:hover {
		background: var(--color-accent-hover);
		border-color: var(--color-accent-hover);
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
	}

	.btn-secondary {
		background: transparent;
		color: var(--color-text);
		border-color: var(--color-text);
	}

	.btn-secondary:hover {
		background: var(--color-text);
		color: var(--color-bg);
		transform: translateY(-2px);
	}

	.section-title {
		font-size: clamp(2.5rem, 6vw, 3.5rem);
		font-weight: 600;
		margin-bottom: 3rem;
		text-align: center;
		letter-spacing: 0.05rem;
	}

	.about {
		background: var(--color-bg-secondary);
	}

	.about-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.about-content p {
		font-size: clamp(1.125rem, 2.5vw, 1.25rem);
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
		line-height: 1.8;
	}

	.highlight {
		color: var(--color-accent);
		font-weight: 600;
	}

	.content-types {
		background: var(--color-bg);
	}

	.cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 4rem;
	}

	.card {
		background: var(--color-bg-secondary);
		padding: 2.5rem 2rem;
		border-radius: 12px;
		text-align: center;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
	}

	.card:hover {
		transform: translateY(-8px);
		border-color: var(--color-accent);
		box-shadow: 0 12px 32px rgba(212, 175, 55, 0.15);
	}

	.card-icon {
		font-size: 3rem;
		margin-bottom: 1.5rem;
	}

	.card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.card p {
		color: var(--color-text-muted);
		line-height: 1.6;
	}

	.quotes {
		background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg) 100%);
		min-height: 60vh;
	}

	.quote-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 3rem;
		margin-top: 4rem;
	}

	.quote {
		text-align: center;
		padding: 2rem;
		position: relative;
	}

	.quote p {
		font-size: clamp(1.25rem, 3vw, 1.5rem);
		font-style: italic;
		color: var(--color-accent);
		line-height: 1.6;
		position: relative;
	}

	.quote p::before {
		content: '"';
		font-size: 4rem;
		color: rgba(212, 175, 55, 0.2);
		position: absolute;
		top: -2rem;
		left: -1rem;
	}

	.platforms {
		background: var(--color-bg);
		min-height: 70vh;
	}

	.platforms-desc {
		text-align: center;
		font-size: clamp(1rem, 2vw, 1.125rem);
		color: var(--color-text-muted);
		max-width: 600px;
		margin: 0 auto 3rem;
		line-height: 1.8;
	}

	.social-links {
		display: flex;
		gap: 2rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 4rem;
	}

	.social-btn {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		padding: 2rem 3rem;
		background: var(--color-bg-secondary);
		border: 2px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		text-decoration: none;
		color: var(--color-text);
		transition: all 0.3s ease;
		min-width: 180px;
	}

	.social-btn span {
		font-size: 1.25rem;
		font-weight: 500;
	}

	.social-btn:hover {
		transform: translateY(-8px);
		border-color: var(--color-accent);
		box-shadow: 0 12px 32px rgba(212, 175, 55, 0.2);
	}

	.contact {
		background: var(--color-bg-secondary);
		text-align: center;
		min-height: 60vh;
	}

	.contact-text {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		margin-bottom: 2rem;
	}

	.email-link {
		display: inline-block;
		font-size: 1.5rem;
		color: var(--color-accent);
		text-decoration: none;
		padding: 1rem 2rem;
		border: 2px solid var(--color-accent);
		border-radius: 8px;
		transition: all 0.3s ease;
		margin-bottom: 3rem;
	}

	.email-link:hover {
		background: var(--color-accent);
		color: var(--color-bg);
		transform: translateY(-2px);
	}

	.contact-social {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
	}

	.contact-social a {
		color: var(--color-text-muted);
		transition: all 0.3s ease;
	}

	.contact-social a:hover {
		color: var(--color-accent);
		transform: scale(1.2);
	}

	.footer {
		background: var(--color-bg);
		text-align: center;
		padding: 3rem 0;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		min-height: auto;
	}

	.footer-brand {
		font-size: 2rem;
		font-weight: 700;
		color: var(--color-accent);
		margin-bottom: 0.5rem;
		letter-spacing: 0.2rem;
	}

	.footer-tagline {
		font-size: 1rem;
		color: var(--color-text-muted);
		margin-bottom: 1rem;
	}

	.footer-copyright {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	@media (max-width: 768px) {
		section {
			padding: var(--spacing-md) 0;
			min-height: auto;
		}

		.hero {
			min-height: 100vh;
		}

		.container {
			padding: 0 1.5rem;
		}

		.brand-name {
			letter-spacing: 0.3rem;
		}

		.tagline {
			letter-spacing: 0.05rem;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: stretch;
		}

		.btn {
			width: 100%;
			justify-content: center;
		}

		.cards {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.quote-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.social-links {
			flex-direction: column;
			align-items: stretch;
		}

		.social-btn {
			width: 100%;
		}
	}
</style>

import Layout from '../layouts/Layout.astro';
---

<Layout title="IBRAH - Stories with Lessons" description="IBRAH brings you powerful short stories with meaningful lessons. Real-life stories, Islamic wisdom, and social reality narratives for the Bangla-speaking audience.">
